<%- include('../../fragment/header.ejs') %>
    <main>
      <div class="container main">
        <table class="section-table">
          <thead>
            <tr>
              <td>Date</td>
              <td>Client's name</td>
              <td>Client's surname</td>
              <td>Book</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
          <% for (const ord of orders){%>
            <tr>
              <td><%= ord.date ? ord.date.toISOString().split('T')[0]: ''%></td>
              <td><%= ord.clients.name%></td>
              <td><%= ord.clients.surname%></td>
              <td><%= ord.book.title%></td>
              <td>
                <a class="btn btn-details table" href="/orders/details/<%= ord._id%>">Details</a>
                <a class="btn btn-edit table" href="/orders/edit/<%= ord._id%>">Edit</a>
                <a class="btn btn-remove table" href="/orders/delete/<%= ord._id%>">Remove</a>
              </td>
            </tr>
          <% } %>
          </tbody>
        </table>
        <a class="btn btn-add" href="/orders/add">Add an order</a>
      </div>
    </main>
<%- include('../../fragment/footer.ejs') %>