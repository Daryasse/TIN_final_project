<%- include('../../fragment/header.ejs') %>
    <main>
      <script type="application/javascript" src="../../js/validationCommon.js"></script>
      <script type="application/javascript" src="../../js/validationOrderForm.js"></script>
      <div class="container main">
        <form novalidate onsubmit="return validateForm();">
          <label class="label-input" for="date">Date: <span class="symbol-required">*</span></label>
          <input type="date" class="error-type input" name="date" id="date" required>
          <span class="error-text" id="errorDate">Field is required.</span>
          <label class="label-input" for="client">Client: <span class="symbol-required">*</span></label>
          <select class="error-type input" name="client" id="client" required>
            <option value="">Choose the client</option>
            <option value="1">Anna Sanlie</option>
            <option value="2">John Parker</option>
            <option value="3">Lilo Adams</option>
          </select>
          <span class="error-text" id="errorClient">Field is required.</span>
          <label class="label-input" for="book">Book: <span class="symbol-required">*</span></label>
          <select class="error-type input" name="book" id="book" required>
            <option value="">Choose the book</option>
            <option value="1">Crime and Punishment</option>
            <option value="2">The Little Prince</option>
            <option value="3">Pride and Prejudice</option>
          </select>
          <span class="error-text" id="errorBook">Field is required.</span>
          <div class="form-btns">
            <p class="error-text" id="errorSummary">Form contains errors.</p>
            <input class="btn btn-add-submit" type="submit" value="Add an order">
            <a class="btn btn-cancel" href="/orders">Cancel</a>
          </div>
        </form>
      </div>
    </main>
<%- include('../../fragment/footer.ejs') %>