<%- include('../../fragment/header.ejs') %>
  <main>
    <div class="container main">
      <form>
        <label class="label-input" for="name">Name: <span class="symbol-required">*</span></label>
        <input type="text" class="input" name="name" id="name" value="Jane" required>
        <span id="errorFirstName"></span>
        <label class="label-input" for="surname">Surname: <span class="symbol-required">*</span></label>
        <input type="text" class="input" name="surname" id="surname" value="Austen" required>
        <span id="errorLastName"></span>
        <label class="label-input" for="nickname">Nickname: </label>
        <input type="text" class="input" name="nickname" id="nickname" value="Nancy">
        <span id="errorNickname"></span>
        <div class="form-btns">
          <p id="errorSummary"></p>
          <input class="btn btn-edit" type="submit" value="Edit an author">
          <a class="btn btn-cancel" href="/authors/authors">Cancel</a>
        </div>
      </form>
    </div>
  </main>
<%- include('../../fragment/footer.ejs') %>