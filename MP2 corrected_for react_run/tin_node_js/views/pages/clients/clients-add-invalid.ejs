<%- include('../../fragment/header.ejs') %>
    <main>
      <script type="application/javascript" src="../../js/validationCommon.js"></script>
      <script type="application/javascript" src="../../js/validationClientForm.js"></script>
      <div class="container main">
        <form novalidate onsubmit="return validateForm();">
          <label class="label-input" for="name">Name: <span class="symbol-required">*</span></label>
          <input type="text" class="error-type input" name="name" id="name" required>
          <span class="error-text" id="errorName">Field is required.</span>
          <label class="label-input" for="surname">Surname: <span class="symbol-required">*</span></label>
          <input type="text" class="error-type input" name="surname" id="surname" required>
          <span class="error-text" id="errorSurname">Field is required.</span>
          <label class="label-input" for="birthdate">Birthdate: <span class="symbol-required">*</span></label>
          <input type="date" class="error-type input" name="birthdate" id="birthdate" required>
          <span class="error-text" id="errorBirthdate">Field is required.</span>
          <label class="label-input" for="email">Email: <span class="symbol-required">*</span></label>
          <input type="email" class="error-type input" name="email" id="email" required>
          <span class="error-text" id="errorEmail">Field is required.</span>
          <div class="form-btns">
            <p class="error-text" id="errorSummary">Form contains errors.</p>
            <input class="btn btn-add-submit" type="submit" value="Add a client">
            <a class="btn btn-cancel" href="/clients">Cancel</a>
          </div>
        </form>
      </div>
    </main>
<%- include('../../fragment/footer.ejs') %>